<header class="main-header">
    <!-- <button id="side-menu-toggle">Menu</button> -->
    <nav>
        <div class="menu">
            <div class="logo"><a href="/">Davido.Merch</a></div>
            <ul>
                <li><a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a></li>
                <li><a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a></li>
                <% if (isAuthenticated) { %>
                    <li><a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a></li>
                    <li><a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a></li>
                    <li><a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product</a></li>
                    <li><a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin Products</a></li>
                <% } %>
            </ul>
            <ul class="main-header__item-list">
                <% if (!isAuthenticated) { %>
                    <li class="main-header__item"><a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a></li>
                    <li class="main-header__item"><a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a></li>
                <% } else { %>
                    <li class="main-header__item">
                        <form action="/logout" method="post">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button type="submit">Logout</button>
                        </form>
                    </li>
                <% } %>
            </ul>
            <strong id="mobile-menu-btn">Menu</strong>
        </div>
    </nav>





    <div class="mobile-nav">
        <ul>
            <li><a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a></li>
            <li><a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a></li>
            <% if (isAuthenticated) { %>
                <li><a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a></li>
                <li><a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a></li>
                <li><a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product</a></li>
                <li><a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin Products</a></li>
            <% } %>
        </ul>
        <ul class="main-header__item-list">
            <% if (!isAuthenticated) { %>
                <li class="main-header__item"><a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a></li>
                <li class="main-header__item"><a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a></li>
            <% } else { %>
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </div>

</header>

