<header class="header">
    <nav class="navbar">
        <a href="/" class="nav-logo">Davido.Merch</a>
        <ul class="nav-menu">
            <li class="nav-item">
                <a href="/" class="nav-link <%= path === '/' ? 'active' : '' %>">Home</a>
            </li>
            <li class="nav-item">
                <a href="/products" class="nav-link <%= path === '/products' ? 'active' : '' %>">Products</a>
            </li>
            <% if (isAuthenticated) { %>
            <li class="nav-item">
                <a href="/cart" class="nav-link <%= path === '/cart' ? 'active' : '' %>">Cart</a>
            </li>
            <li class="nav-item">
                <a href="/orders" class="nav-link <%= path === '/orders' ? 'active' : '' %>">Orders</a>
            </li>
            <li class="nav-item">
                <a href="/admin/add-product" class="nav-link <%= path === '/admin/add-product' ? 'active' : '' %>">Add Products</a>
            </li>
            <li class="nav-item">
                <a href="/admin/products" class="nav-link <%= path === '/admin/products' ? 'active' : '' %>">Admin Products</a>
            </li>
            <% } %>
            <% if (!isAuthenticated) { %>
                <li class="nav-item"><a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a></li>
                <li class="nav-item"><a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a></li>
            <% } else { %>
                <li class="nav-item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
        <div class="hamburger">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
    </nav>
</header>