<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/authen.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <br><br>
        <div class="box-form">
            <div class="left">
                <div class="overlay">
                <h1>Oops! Forgot Password?</h1>
                <p>Don't worry. We want to get you back in your account as fast as we can.</p>
                </div>
            </div>
            
            <div class="right">
                <% if (errorMessage) { %>
                    <div class="user-message user-message--error"><%= errorMessage %></div>
                <% } %>

                <br>

                <p>Put in your registered email and we will send a link to reset your password.</p>
                <form class="login-form" action="/reset" method="POST">
                    <div class="inputs">
                        <input
                        placeholder="Your registered email"
                        type="email" 
                        name="email" 
                        id="email">
        
                        <br>
                        <br>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </div>
                    <button type="submit">Get Reset Link</button>
                </form>	
            </div>
        </div>

    </main>
<%- include('../includes/end.ejs') %>