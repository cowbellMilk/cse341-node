<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/authen.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <br><br>
        <div class="box-form">
            <div class="left">
                <div class="overlay">
                <h1>Welcome Back!</h1>
                <p>Please sign back in to your account in order to make a Davido Merch purchase.</p>
                </div>
            </div>
            
            <div class="right">
                <% if (errorMessage) { %>
                    <div class="user-message user-message--error"><%= errorMessage %></div>
                <% } %>

                <br>
                <p>Don't have an account? <a href="/signup">Create Your Account!</a> it takes less than a minute</p>
                <form class="login-form" action="/login" method="POST">
                    <div class="inputs">
                        <input
                        placeholder="email address"
                        class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                        type="email" 
                        name="email" 
                        id="email" 
                        value="<%= oldInput.email %>">
        
                        <br>
        
                        <input
                        placeholder="password"
                        class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                        type="password" 
                        name="password" 
                        id="password" 
                        value="<%= oldInput.password %>">
        
                        <br>
                        <br>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </div>
        
                    <div class="remember-me--forget-password">
                        <p><a href="/reset">forgot password?</a></p>
                    </div>
                    <br>
                    <button type="submit">Login</button>
                </form>	
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %>