<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/authen.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <br><br>
        <div class="box-form">
            <div class="left">
                <div class="overlay">
                <h1>Join the Gang!</h1>
                <p>As a valued member of the 30BG Merch Crew, you get amazing discounts and promotions.</p>
                </div>
            </div>
            
            <div class="right">
                <% if (errorMessage) { %>
                    <div class="user-message user-message--error"><%= errorMessage %></div>
                <% } %>

                <br>
                <p>Already a member? <a href="/login">Log in!</a> We have cool products waiting for you.</p>
                <form class="login-form" action="/signup" method="POST" novalidate>
                    <div class="inputs">
                        <input
                        placeholder="email address"
                        class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                        type="email" 
                        name="email" 
                        id="email" 
                        value="<%= oldInput.email %>">
        
                        <br>
        
                        <input
                        placeholder="password"
                        class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                        type="password" 
                        name="password" 
                        id="password" 
                        value="<%= oldInput.password %>">

                        <br>

                        <input
                        placeholder="confirm password"
                        class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                        type="password" 
                        name="confirmPassword" 
                        id="confirmPassword" 
                        value="<%= oldInput.confirmPassword %>">
        
                        <br>
                        <br>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </div>
                    <button type="submit">Register</button>
                </form>	
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %>